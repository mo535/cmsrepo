# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
GET         /home                controllers.Application.index()
GET         /login               controllers.Application.login()
POST        /login               controllers.Application.authenticate()
GET         /welcome             controllers.Application.welcome
GET         /settings            controllers.Application.settings
GET         /page                controllers.Application.page
GET         /register            controllers.Application.register()
POST        /register            controllers.Application.registerValidation()
GET         /logout              controllers.Application.logout()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)